FROM elixir:1.16-alpine

# Install build dependencies
RUN apk add --no-cache build-base git nodejs npm

WORKDIR /app

# Install hex and rebar
RUN mix local.hex --force && \
    mix local.rebar --force

# Copy mix files
COPY mix.exs ./
COPY mix.lock* ./

# Install dependencies
RUN mix deps.get && \
    mix deps.compile

# Copy source code
COPY . .

EXPOSE 4000

CMD ["mix", "phx.server"]

